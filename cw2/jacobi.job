cd $PBS_O_WORKDIR

echo Running on host `hostname`
echo Time is `date`
echo Directory is `pwd`
echo PBS job ID is $PBS_JOBID

for i in `seq 1 20`; do
    ./jacobi --norder 1000 --iterations 20000 >> jacobi_1000.out
done

for i in `seq 1 20`; do
    ./jacobi --norder 2000 --iterations 20000 >> jacobi_2000.out
done

for i in `seq 1 20`; do
    ./jacobi --norder 4000 --iterations 20000 >> jacobi_4000.out
done
